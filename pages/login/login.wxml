<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="/images/loginLog.jpg"></image> 
 </view> 
 <view class="login-from"> 
 
 <!--账号--> 
 <view class="inputView"> 
    <image class="nameImage" src="/images/name.png"></image> 
    <label class="loginLab">账号</label> 
    <input class="inputText" placeholder="请输入设备ID" bindinput="phoneInput" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码--> 
 <view class="inputView"> 
    <image class="keyImage" src="/images/key.png"></image> 
    <label class="loginLab">密码</label> 
    <input class="inputText" password="true" placeholder="请输入APIKey" bindinput="passwordInput" /> 
 </view> 
 
 <!--按钮--> 
 <view class="loginBtnView"> 
 <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="loginOneNET">登录</button> 
 </view> 
 </view> 
</view> 