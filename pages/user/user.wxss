/* pages/user/user.wxss */
.container{
    background-color: #f6f6f6;
    padding: 0;
  }
  .user-info, .more-btn {
    display: flex;
    background-color: #fff;
    min-height: 105rpx;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
  }
  /**more-list**/
  .more-list {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .more-btn {
    align-items: center;
    font-size: 13pt;
    padding: 0 50rpx;
  }
  .issue-link, .about-link {
    margin-bottom: -1rpx;       /*边距*/
  }
  .btn-icon {
    width: 45rpx;
    height: 45rpx;
    margin-right: 15rpx;
  }
  .btn-name {
    flex: 1;
  }
  .btn-text {
    flex: 1;
    color:#6b6b6b;
  }
  .btn-open {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-left: 10rpx;
  }
  .btn-enter {
    width: 18rpx;
    height: 27rpx;
  }
  .login-btn {
    font-size: 13pt;
    line-height: 85rpx;
    height: 85rpx;
    background: #e55c5c;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    margin: 40rpx 3%;
  }